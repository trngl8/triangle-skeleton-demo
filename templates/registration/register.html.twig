{% extends 'layout.html.twig' %}

{% block title %}{{ 'title.register'|trans }}{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_index') }}">{{ 'brcmbs.home'|trans }}</a></li>
            <li class="breadcrumb-item" aria-current="page">{{ 'title.register'|trans }}</li>
        </ol>
    </nav>
{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="mb-4">{{ 'title.register'|trans }}</h1>

    <div class="row">
        <div class="col-md-6">

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username, {
                    label: 'Email'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-lg btn-primary">{{ 'button.register'|trans }}</button>
            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock %}
