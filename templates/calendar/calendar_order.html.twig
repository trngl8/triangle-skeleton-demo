{% extends 'calendar/default.html.twig' %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_index') }}">{{ 'menu.home'|trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_calendar_default') }}">{{ 'menu.calendar'|trans }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ item.time }}</li>
        </ol>
    </nav>
{% endblock %}

{% block main %}
    <div class="py-5">

        <h1 class="mb-4">Tomorrow, {{ "tomorrow"|date('Y-m-d') }}, {{ item.time }}</h1>
        <div class="col-md-8">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-lg btn-outline-primary">{{ 'button.submit'|trans }}</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
