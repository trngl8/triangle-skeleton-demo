{% extends 'default_index.html.twig' %}

{% block title %}{{ app_name }} {{ app.request.pathinfo }} {% endblock %}

{% block modal %}{% endblock %}

{% block simple_navbar %}
    <header class="p-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="{{ path('default') }}" class="d-flex align-items-center mb-2 me-4 mb-lg-0 text-decoration-none">
                    <img src="{{ asset('favicons/favicon.svg') }}" width="32" height="32" alt="{{ app_name }}">
                </a>

                {{ render(controller(
                    'App\\Controller\\MenuController::mainMenu', {max: 8}
                )) }}

{#                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">#}
{#                    <input type="search" class="form-control" placeholder="Search..." aria-label="Search">#}
{#                </form>#}
                {% if is_granted('IS_AUTHENTICATED_FULLY') or is_granted('IS_AUTHENTICATED_REMEMBERED')  %}
                    <div class="text-white">
                        <div class="dropdown">
                            <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person"></i>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('app_profile') }}">{{ 'app.profile'|trans }}</a></li>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a class="dropdown-item" href="{{ path('app_inbox') }}">{{ 'app.inbox'|trans }} {% if incoming_unread_count is defined %}<span class="badge text-bg-secondary">{{ incoming_unread_count }}</span>{% endif %}</a></li>
                                {% endif %}
                                <li><a class="dropdown-item" href="{{ path('app_profile_invites') }}">{{ 'app.invites'|trans }}</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_order_index') }}">{{ 'app.orders'|trans }} {% if cart_items_count is defined %}<span class="badge text-bg-secondary">{{ cart_items_count }}{% endif %} </span></a></li>
                                <li><a class="dropdown-item" href="{{ path('logout') }}">{{ 'app.logout'|trans }}</a></li>
                            </ul>
                        </div>
                    </div>
                {% else %}
                    <div class="text-end">
                        <a class="btn btn-outline-primary me-2 position-relative" href="{{ path('login') }}" title="Log in when you have an account">
                            {{ 'button.login'|trans }}
                        </a>
{#                        <a class="btn btn-primary me-2" href="{{ path('subscribe_add') }}" title="Register when you have no account">Sign-up</a>#}
                    </div>
                {% endif %}
            </div>
        </div>
    </header>
{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container"> {# container-fluid #}
            <a class="navbar-brand" href="#"><i class="bi bi-triangle"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('default') }}">{{ 'menu.index'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_project_index') }}">{{ 'menu.projects'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_offer_index') }}">{{ 'menu.offer'|trans }}</a>
                    </li>
                </ul>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div class="dropdown">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.name }}
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            <li><a class="dropdown-item" href="{{ path('app_profile')}}">{{ 'profile'|trans }}</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{path('logout')}}">{{ 'logout'|trans }}</a></li>
                        </ul>
                    </div>
                {% else %}
                    <a class="btn btn-outline-secondary ms-lg-2" href="{{ path('login') }}"><i class="bi bi-person"></i> {{ 'login'|trans }}</a>
                {% endif %}
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}

{#    {% include 'index/_top_menu.html.twig' %}#}

    {%block hero %}

        {% include 'index/_' ~ hero ~ '_hero.html.twig' %}

        {% for block in blocks  %}

            {% if block.type == 'list' %}
                <div class="container">
                    <h3 class="mb-4">{{ block.title }}</h3>
                    <div class="row">
                        <div class="col-md-8">
                            {{ render(path(block.controller, {max: 3})) }}
                        </div>
                        <div class="col-md-4">
                            <div class="h-100 p-4 bg-light border rounded-3">
                                <p>By products:</p>
                                <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary" title="details instructions">View products</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if block.type == 'container' %}
                <div class="container">
                    <div class="row align-items-md-stretch">
                        <div class="col-md-6">
                            <div class="h-100 p-5 text-white bg-dark rounded-3">
                                <h2>{{ block.title }}</h2>
                                <p>{{ block.route }}</p>
                                <a href="{{ path('app_product_index') }}" class="btn btn-outline-light" title="details instructions">Join course</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="h-100 p-5 bg-light border rounded-3">
                                <h2>{{ block.title }}</h2>
                                <p>{{ block.route }}</p>
                                <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary" title="details instructions">Join course</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if block.type == 'features' %}
                {{ render(path(block.controller, {id: block.id})) }}
            {% endif %}

        {% endfor %}

    {% endblock hero %}

    <div class="mt-4">
        <main class="container">

            {% block breadcrumbs %}
            {% endblock %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ message|trans }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ message|trans }}
                </div>
            {% endfor %}

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning" role="alert">
                    {{ message|trans }}
                </div>
            {% endfor %}

            {% block add_flashes %}
            {% endblock %}

            {% block main %}
            {% endblock %}
        </main>
    </div>
{% endblock %}

{% block footer %}
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-body-secondary">&copy; 2021-{{ 'now'|date('Y') }} {{ app_name }}</p>

            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <img src="{{ asset('favicons/favicon.svg') }}" width="32" height="32" alt="{{ app_name }}">
            </a>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a href="/" class="nav-link px-2 text-body-secondary">Home</a></li>
                <li class="nav-item"><a href="/feature" class="nav-link px-2 text-body-secondary">Feature</a></li>
                <li class="nav-item"><a href="/pricing" class="nav-link px-2 text-body-secondary">Pricing</a></li>
                <li class="nav-item"><a href="/faq" class="nav-link px-2 text-body-secondary">FAQs</a></li>
                <li class="nav-item"><a href="/about" class="nav-link px-2 text-body-secondary">About</a></li>
            </ul>
        </footer>
    </div>
{% endblock %}
