{% extends 'default.html.twig' %}

{% block main %}
    <main class="form-signin w-100 m-auto">
        <div class="container">
            <div class="row">

                <div class="text-center d-flex justify-content-center mb-4">
                    <div class="icon"></div>
                </div>

                <div class="text-center">
                    <h1 class="h3 mb-5 fw-normal"><i class="bi bi-people-fill"></i> Member's area</h1>
                </div>
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="card">
                    <div class="card-body text-dark ">

                        {% if app.user %}
                            {# TODO: set default module for the user #}
                            <a class="w-100 btn btn-lg btn-outline-primary btn-common" href="{{ path('app_profile') }}">{{ app.user.userIdentifier }}</a>
                            <p class="mb-3 mt-3 text-center">or</p>
                            <a class="w-100 btn btn-lg btn-outline-primary" href="{{ path('logout') }}">{{ 'logout'|trans }}</a>

                        {% else %}

                            <form method="post" action="{{ path('login') }}">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="mb-3">
                                    <label for="username" class="form-label">{{ 'form.label.email'|trans }}</label>
                                    <input type="email" class="form-control" id="username" name="_username" value="{% if last_username is defined %}{{ last_username }}{% endif %}" aria-describedby="emailHelp">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">{{ 'form.label.password'|trans }}</label>
                                    <input type="password" id="password" name="_password" class="form-control">
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="remember" name="_remember_me">
                                    <label class="form-check-label" for="remember">{{ 'form.label.remember_me'|trans }}</label>
                                </div>
                                <button class="w-100 btn btn-lg btn-outline-primary btn-common" type="submit">{{ 'button.login'|trans }}</button>

                            </form>

                        {% endif %}

                    </div>
                </div>

            </div>
        </div>
    </main>
{% endblock main %}
