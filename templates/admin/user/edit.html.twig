{% extends '/admin/user/show.html.twig' %}

{% block page_title_h1 %}edit user #{{ user.id }}{{ user.verified }}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-4">
            <div class="card  border-secondary mb-3">
                <div class="card-header">{% block card_header %}{{ user.userIdentifier }}{% endblock %}</div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {{ form_row(form.email) }}
                    {{ form_rest(form) }}

                    <div class="mt-2">
                        <button type="submit" class="btn btn-outline-primary">submit</button>
                    </div>

                    {{ form_end(form)  }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
