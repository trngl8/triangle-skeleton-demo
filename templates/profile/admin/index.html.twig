{% extends 'admin.html.twig' %}

{% block title %}{{ 'text.must_be_replaced'|trans }}{% endblock %}

{% block page_title %}
    <h1 class="mt-4">{{ 'title.profiles'|trans }}</h1>
{%endblock%}

{% block breadcrumb %}
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'menu.dashboard'|trans }}</a></li>
        <li class="breadcrumb-item active">{{ 'menu.profiles'|trans }}</li>
    </ol>
{% endblock %}

{% block action_panel %}
    <div class="mb-4">
        {% if button is defined %}
            <a href="{{ path('admin_profile_add') }}" class="btn btn-outline-primary" title="{{ 'button.add'|trans }} invite"><i class="bi bi-plus-circle"></i> {{ 'button.add'|trans }}</a>
{#            <a href="{{ path('admin_profile_export') }}" class="btn btn-outline-secondary" title="{{ 'button.export'|trans }} invite"><i class="bi bi-download"></i> {{ 'button.export'|trans }}</a>#}

        {% endif %}
    </div>
{% endblock %}

{% block main %}

    {% if items is defined and items|length > 0 %}
        <table class="table">
            <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">{{ 'name'| trans }}</th>
                <th scope="col">{{ 'email'| trans }}</th>
                <th scope="col">{{ 'locale'| trans }}</th>
                <th scope="col">{{ 'timezone'| trans }}</th>
                <th scope="col">{{ 'active'| trans }}</th>
                <th scope="col" class="col-2">{{ 'actions'| trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <th scope="row">{{ item.id }}</th>
                    <td><a href="{{ path('admin_profile_show', { id: item.id }) }}">{{ item.name }}</a></td>
                    <td><a href="{{ path('admin_profile_show', { id: item.id }) }}">{{ item.email }}</a></td>
                    <td><a href="{{ path('admin_profile_show', { id: item.id }) }}">{{ item.locale }}</a></td>
                    <td><a href="{{ path('admin_profile_show', { id: item.id }) }}">{{ item.timezone }}</a></td>
                    <td>{% if item.active %}<i class="bi bi-toggle-on"></i>{% else %}<i class="bi bi-toggle-off"></i>{% endif %}</td>
                    <td>
                        <a href="{{ path('admin_profile_show', { id: item.id }) }}" class="btn btn-sm btn-outline-primary">{{ 'button.edit'|trans }}</a>
                        <a href="{{ path('admin_profile_remove', { id: item.id }) }}" class="btn btn-sm btn-outline-danger">{{ 'button.remove'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ 'message.no_items'|trans}}</p>
    {% endif %}

    {% if button is defined %}
        <a href="{{ path('admin_profile_add') }}" class="btn btn-outline-primary">{{ 'button.add'|trans }}</a>
    {% endif %}

{% endblock %}
