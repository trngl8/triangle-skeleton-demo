{% extends 'layout.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_index') }}">{{ 'brcmbs.home'|trans }}</a></li>
            <li class="breadcrumb-item" aria-current="page">{{ 'title.forgot'|trans }}</li>
        </ol>
    </nav>
{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="mb-4">Forgot your password?</h1>

    <div class="row">
        <div class="col-md-6">

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.username, {
                    'label': 'Email',
                }) }}
                <small>
                    Enter your email address and we will send you a
                    link to reset your password.
                </small>

                <div class="mt-3">
                    <button class="btn btn-primary" type="submit">Send password reset email</button>
                </div>


            {{ form_end(requestForm) }}

        </div>
    </div>
{% endblock %}
